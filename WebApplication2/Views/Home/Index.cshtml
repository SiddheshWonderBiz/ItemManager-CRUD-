@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 fw-bold">Welcome to Item Manager</h1>
        <p class="lead text-muted">A simple CRUD app built with <strong>ASP.NET Core</strong> and <strong>Entity Framework</strong>.</p>
        <p class="mb-4">
            This application lets you:
        </p>

        <ul class="list-group list-group-flush mb-4 text-start w-50 mx-auto">
            <li class="list-group-item">📝 Create new items</li>
            <li class="list-group-item">📋 View a list of all items</li>
            <li class="list-group-item">✏️ Edit existing item details</li>
            <li class="list-group-item">🗑️ Delete items you no longer need</li>
        </ul>

        <a class="btn btn-primary btn-lg" href="/Item/Index">Go to Item List</a>
    </div>

    <hr class="my-5" />

    <div class="text-center">
        <p>Want to learn more?</p>
        <a href="https://learn.microsoft.com/aspnet/core" class="btn btn-outline-secondary">
            Learn ASP.NET Core
        </a>
    </div>
</div>
