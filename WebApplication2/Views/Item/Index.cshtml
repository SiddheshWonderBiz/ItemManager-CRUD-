@model List<WebApplication2.Models.Item>

@{
    ViewData["Title"] = "Items";
}

<h2 class="text-center my-4">Items List</h2>

<div class="container">
    <table class="table table-striped table-bordered shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Price (₹)</th>
                 <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("0.00")</td>
                     <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td> 
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-primary mt-3">Add New Item</a>
</div>
